<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="postViewModel"
            type="com.icarasia.social.socialmediaapp.Posts.PostsViewModel"/>
        <variable
            name="posts"
            type="android.databinding.ObservableArrayList&lt;com.icarasia.social.socialmediaapp.Posts.Post&gt;"/>
    </data>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Posts.PostsFragment">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Posts.PostsActivity">

        <!--xmlns:bind="http://schemas.android.com/tools"-->


        <android.support.v7.widget.RecyclerView
            android:id="@+id/postsFragmentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:addPosts="@{posts}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:listitem="@layout/recycler_item_view" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addNewPost"
            android:layout_width="73dp"
            android:layout_height="59dp"
            android:onClick="@{()->postViewModel.addPost()}"
            app:srcCompat="@android:drawable/ic_input_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias=".95"
            app:layout_constraintVertical_bias=".95"/>

        <ProgressBar
            android:id="@+id/progressBarFragment"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintVertical_bias=".95" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
</layout>